<div class="card">
  <h4>Would you Rather</h4>
  <h5><%= link_to option.answer_one, option_path(option, vote: 'one'), method: :patch, remote: true %> | <span id="votes_one_<%= option.id %>"><%= option.votes_one %></span> or
  <%= link_to option.answer_two, option_path(option, vote: 'two'), method: :patch, remote: true %> | <span id="votes_two_<%= option.id %>"><%= option.votes_two %></span></h5>
  <%= link_to "Comment", new_option_comment_path(option), id: 'comment_on_' + option.id.to_s, remote: true %>
  <div class="collection" id="option_<%= option.id %>_comments">
    <% option.comments.each do |comment| %>
      <p class="collection-item">
        <%= comment.content %>
        <%= link_to "Delete", option_comment_path(option, comment), method: :delete, remote: true %>
      </p>
    <% end %>
  </div>
</div>
